{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
  "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@renderer/*": ["src/renderer/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node", "electron", "electron-vite/node", "vite/client"]
  },
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/main/**/*",
    "src/preload/**/*",
    "electron.vite.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "build",
    "**/dist/**",
    "**/out/**",
    "**/build/**"
  ]
}
